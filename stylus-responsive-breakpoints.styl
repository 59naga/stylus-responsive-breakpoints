srb-portrait()
  @media (orientation portrait)
    {block}
srb-landscape()
  @media (orientation landscape)
    {block}

// https://material.angularjs.org/latest/layout/container
srb-xs()
  @media (max-width 600px - 1px)
    {block}
srb-sm()
  @media (min-width 600px) and (max-width 960px - 1px)
    {block}
srb-md()
  @media (min-width 960px) and (max-width 1280px - 1px)
    {block}
srb-lg()
  @media (min-width 1280px) and (max-width 1920px - 1px)
    {block}
srb-xl()
  @media (min-width 1920px)
    {block}

// and greater than
srb-gt-xs()
  @media (min-width 600px)
    {block}
srb-gt-sm()
  @media (min-width 960px)
    {block}
srb-gt-md()
  @media (min-width 1280px)
    {block}
srb-gt-lg()
  +srb-xl()
    {block}

// http://stackoverflow.com/questions/3839809/detect-iphone-ipad-purely-by-css
srb-device-sm()
  @media (max-device-width 480px)
    {block}
srb-device-md()
  @media (min-device-width 481px) and (max-device-width 1024px)
    {block}
srb-device-lg()
  @media (min-device-width: 1025px)
    {block}

// and greater than
srb-gt-device-sm()
  @media (min-device-width 481px)
    {block}
srb-gt-device-md()
  +srb-device-lg()
    {block}
